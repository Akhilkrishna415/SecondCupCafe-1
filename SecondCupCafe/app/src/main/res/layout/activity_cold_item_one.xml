<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".coldItemOne">
<ImageView
    android:id="@+id/imageView4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/logo" />
<ImageView
    android:id="@+id/subitem"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_below="@id/imageView4"
    android:src="@drawable/cold"/>
<TextView
    android:id="@+id/Subtitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/subitem"
    android:textStyle="italic|bold"
    android:textSize="15dp"
    android:text="Cold Coffee"
    android:gravity="center"/>
<View
    android:layout_marginTop="5dp"
    android:layout_below="@id/Subtitle"
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="?android:attr/listDivider" />
<androidx.cardview.widget.CardView
    android:id="@+id/Card1"
    android:layout_marginTop="30dp"
    android:layout_below="@id/divider"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="20dp"
    android:foregroundGravity="fill"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="7dp">
    <TextView
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/coldcoffee"
        />
</androidx.cardview.widget.CardView>
<TextView
    android:id="@+id/calorie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:textColor="@color/tea1"
    android:layout_below="@id/Card1"
    android:layout_marginTop="5dp"
    android:text="Calories - 50kcal"
    android:textStyle="bold"
    android:gravity="center"/>
<LinearLayout
    android:id="@+id/layout"
    android:layout_below="@id/calorie"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">
    <CheckBox
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" extra ice "
        />
    <CheckBox
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="expreso shot " />
    <CheckBox
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:id="@+id/checkBox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toppings" />
</LinearLayout>
<Button
    android:layout_marginLeft="120dp"
    android:layout_marginRight="120dp"
    android:layout_below="@id/layout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:textColor="@color/white"
    android:text=" Order "
    android:background="#008080"
    android:id="@+id/order"
    />
</RelativeLayout>