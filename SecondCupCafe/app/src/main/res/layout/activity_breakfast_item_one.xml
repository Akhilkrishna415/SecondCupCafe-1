<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreakfastItemOne">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo" />
    <!--<ImageView-->
    <!--    android:id="@+id/subitem"-->
    <!--    android:layout_width="match_parent"-->
    <!--    android:layout_height="120dp"-->
    <!--    android:layout_below="@id/imageView4"-->
    <!--    android:src="@drawable/breaktwo"/>-->
    <TextView
        android:id="@+id/Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView4"
        android:textSize="35dp"
        android:textStyle="bold"
        android:text="Croissant"
        android:gravity="center" />

    <View
    android:layout_marginTop="5dp"
    android:layout_below="@id/Subtitle"
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="?android:attr/listDivider" />
<androidx.cardview.widget.CardView
    android:id="@+id/Card1"
    android:layout_marginTop="30dp"
    android:layout_below="@id/divider"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="20dp"
    android:foregroundGravity="fill"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="7dp">
    <TextView
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/donut"
        />

</androidx.cardview.widget.CardView>
<TextView
    android:id="@+id/calorie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:textColor="#008080"
    android:layout_below="@id/Card1"
    android:layout_marginTop="5dp"
    android:text="Calories - 50kcal"
    android:textStyle="bold"
    android:gravity="center" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/calorie"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:height="25dp"
                android:gravity="center"
                android:text="Price"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/item_pricev2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6 $"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/Qty"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:height="25dp"
                android:gravity="center"
                android:text="Qty"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:focusedByDefault="true"
                android:inputType="number"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/instructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Where to ?"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="@color/dark_red"
                android:textColorHint="@color/dark_red" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="120dp"
        android:background="#008080"
        android:text=" Order "
        android:textColor="#EFE9E9"
        android:textColorHint="#FFFFFF" />
</RelativeLayout>